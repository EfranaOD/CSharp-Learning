<Window x:Class="SimpleCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculatorWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtNumOne"  GotFocus="TextBox_GotFocus" HorizontalAlignment="Left" Margin="275,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Height="30" BorderBrush="#FF515050"/>
        <TextBox x:Name="txtNumTwo" GotFocus="TextBox_GotFocus" HorizontalAlignment="Left" Margin="421,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Height="30" BorderBrush="#FF515050"/>
        <Button x:Name="sum" Content="+" HorizontalAlignment="Left" Margin="421,277,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="AddButton_Click"/>
        <Button x:Name="sub" Content="-" HorizontalAlignment="Left" Margin="491,277,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="SubButton_Click"/>
        <Button x:Name="product" Content="*" HorizontalAlignment="Left" Margin="491,217,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="ProdButton_Click"/>
        <Button x:Name="division" Content="÷" HorizontalAlignment="Left" Margin="491,158,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="DivButton_Click"/>
        <Button x:Name="clear" Content="C" HorizontalAlignment="Left" Margin="491,102,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="ClearButton_Click" RenderTransformOrigin="-0.341,0.178"/>
        <Button x:Name="dot" Content="." HorizontalAlignment="Left" Margin="275,277,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="PeriodButton_Click"/>
        <Button x:Name="numZero" Content="0" HorizontalAlignment="Left" Margin="350,277,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numOne" Content="1" HorizontalAlignment="Left" Margin="275,217,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numTwo" Content="2" HorizontalAlignment="Left" Margin="350,217,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numThree" Content="3" HorizontalAlignment="Left" Margin="421,217,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numFour" Content="4" HorizontalAlignment="Left" Margin="275,158,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numFive" Content="5" HorizontalAlignment="Left" Margin="350,158,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numSix" Content="6" HorizontalAlignment="Left" Margin="421,158,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numSeven" Content="7" HorizontalAlignment="Left" Margin="275,102,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numEight" Content="8" HorizontalAlignment="Left" Margin="350,102,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Button x:Name="numNine" Content="9" HorizontalAlignment="Left" Margin="421,102,0,0" VerticalAlignment="Top" Height="35" Width="44" Click="NumberButton_Click"/>
        <Label x:Name="lblResult" HorizontalAlignment="Center" Margin="0,356,0,0" VerticalAlignment="Top" Height="32" Width="156"/>
    </Grid>
</Window>
